{
  "name": "kostky",
  "private": true,
  "version": "3.0.0",
  "type": "module",
  "scripts": {
    "fetch-assets": "node ./scripts/get-fonts.js",
    "dev": "vite --host",
    "build": "npm run fetch-assets && npm run vite-build",
    "vite-build": "vite build --base=./",
    "preview": "vite preview",
    "deploy": "gh-pages -d dist --no-history",
    "check": "svelte-check --tsconfig ./tsconfig.json && tsc -p tsconfig.node.json"
  },
  "devDependencies": {
    "@jamescoyle/svelte-icon": "^0.1.1",
    "@mdi/js": "^7.4.47",
    "@sveltejs/vite-plugin-svelte": "^6.1.3",
    "@tailwindcss/vite": "^4.1.12",
    "@tsconfig/svelte": "^5.0.4",
    "gh-pages": "^6.2.0",
    "google-fonts-helper": "^3.7.3",
    "sass": "^1.80.7",
    "svelte": "^5.36.10",
    "svelte-check": "^4.0.7",
    "svelte-i18n": "^4.0.1",
    "svelte-preprocess": "^6.0.3",
    "tailwindcss": "^4.1.12",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vite-plugin-pwa": "^1.0.3",
    "workbox-window": "^7.3.0"
  }
}